<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="bartalos86.controllers.HubController"
           alignment="center" hgap="10" vgap="10">

    <Label GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" text="Meme Extractor">
        <font>
            <Font name="Noto Sans bold" size="30"/>
        </font>
    </Label>

    <Button onAction="#fromFileClicked" GridPane.columnIndex="0" GridPane.rowIndex="1" prefHeight="50" prefWidth="175" text="From file">
        <font>
            <Font size="16"/>
        </font>
    </Button>
    <Button  onAction="#fromStreamClicked" GridPane.columnIndex="1" GridPane.rowIndex="1" prefHeight="50" prefWidth="175" text="From stream">
        <font>
            <Font size="16"/>
        </font>
    </Button>

    <Button onAction="#fromRedditClicked" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" prefHeight="50" prefWidth="175" text="Reddit">
        <font>
            <Font size="16"/>
        </font>
    </Button>

    <Button onAction="#downloadStreamClicked" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2" prefHeight="50" prefWidth="175" text="DownStream">
        <font>
            <Font size="16"/>
        </font>
    </Button>


</GridPane>